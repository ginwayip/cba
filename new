Sub upselldownbuy5ge()    Range("c1") = Range("a6")    i = 7    k = 0    For i = 7 To 5334        Select Case Cells(i, 3).Value            Case Is <= -0.005                Cells(i, 4).Value = Cells(i - 1, 4).Value + 0.999 * (Cells(i - 1, 5).Value * 0.2 / Cells(i, 1).Value)                Cells(i, 5).Value = Cells(i - 1, 5).Value * 0.8                Range("c1") = Cells(i, 1).Value            Case Is >= 0.005                If Cells(i - 1, 1).Value > Cells(i, 1).Value Then                    k = k + 1                End If                If k = 3 Then                    Cells(i, 4).Value = Cells(i - 1, 4).Value * 0.8                    Cells(i, 5).Value = Cells(i - 1, 5).Value + Cells(i - 1, 4).Value * 0.2 * Cells(i, 1).Value * 0.999                    Range("c1") = Cells(i, 1).Value                    k = 0                End If                Cells(i, 4).Value = Cells(i - 1, 4).Value                Cells(i, 5).Value = Cells(i - 1, 5).Value            Case Else                If Cells(i, 3).Value < 0.005 And Cells(i - 1, 3).Value >= 0.005 Then                    Cells(i, 4).Value = Cells(i - 1, 4).Value * 0.9                    Cells(i, 5).Value = Cells(i - 1, 5).Value + Cells(i - 1, 4).Value * 0.1 * Cells(i, 1).Value * 0.999                    Range("c1") = Cells(i, 1).Value                    k = 0                End If                Cells(i, 4).Value = Cells(i - 1, 4).Value                Cells(i, 5).Value = Cells(i - 1, 5).Value        End Select    NextEnd Sub
